Include conf.d/work.config conf.d/private.config ~/.config/colima/ssh_config

Host *
  ForwardAgent yes
  User tnmt
  ServerAliveInterval 60
  ServerAliveCountMax 5
  HashKnownHosts yes
  ControlMaster auto
  ControlPath ~/.ssh/master-%r@%h:%p
  ControlPersist 60m
  AddKeysToAgent yes
  StrictHostKeyChecking no
